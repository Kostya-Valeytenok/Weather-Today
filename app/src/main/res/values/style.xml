<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="WeatherIc">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#FFD507</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/weathericons_regular_webfont</item>
    </style>
    <style name="splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DarkTheme1" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gray_400</item>
        <item name="android:windowBackground">@color/gray_800</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/gray_700</item>
        <item name="android:listViewStyle">@style/DarkListView</item>
    </style>
    <style name="DarkListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/gray_800</item>
        <item name="android:cacheColorHint">@color/gray_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>